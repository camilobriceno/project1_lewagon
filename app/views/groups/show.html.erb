<div class="animated fadeInDown">

<h1 class="title mt-4"><br><span style="color: #c7c7c8;"><%= @group.name %></span></h1>
<div class="group-show-wrapper">
  <div class="group-show-image-holder" style="background-color: <%= ["#ffc1c6", "#c59ffe", "#fed464", "#c1d9f9", "#d7fafb"].sample %> ">
      <% if @group.photo.attached? %>
           <%= cl_image_tag @group.photo.key, class: "group-show-avatar" %>
      <% end %>

  </div>


   <div class="group-members">



          <h5 style="font-weight:300" class="mt-2">Members</h5>
            <div class="group-members-flex">
              <% @group_members.each do |user| %>
                <div class="group-member-image-holder" style="background-color: <%= ["#ffc1c6", "#c59ffe", "#fed464", "#c1d9f9", "#d7fafb"].sample %> ">
                <% if user.photo.attached? %>
                    <%= cl_image_tag user.photo.key, class: "group-member-avatar" %>
                    <% else %>
                    <%= image_tag "default-avatar.png", class: "group-member-avatar" %>
                <% end %>
                </div>
              <% end %>
           </div>
    </div>

  </div>

   <div class="option-card-group mt-4" style="display: flex;">
        <h5>Total pending payment:</h5>
        <h2>59,02 â‚¬</h2>
        <%= link_to "Add Cost", group_fixed_costs_path(@group) %>
   </div>
</div>
   <div class="more-card-holder mt-4">

       <div class="option-card-group animated fadeInLeft" style="position: relative;">
       <p style="position: absolute;right: 11px;top: 9px;"> <%= @not_finished_tasks  %> Tasks</p>
       <%= link_to  group_tasks_path(@group) do %>
          <div class="icon-holder">
            <i class="fa-solid fa-broom"></i>
          </div>
        <% end %>
          <h5 class="mt-3">Duties</h5>
      </div>

      <div class="option-card-group animated fadeInRight" style="position: relative;">
      <p style="position: absolute;right: 11px;top: 9px;"> <%= @bought_items.length  %> Items</p>

          <%= link_to group_shopping_lists_path(@group) do%>
        <div class="icon-holder">
            <i class="fa-solid fa-pizza-slice"></i>
          </div>
          <% end %>
          <h5 class="mt-3">Food</h5>
      </div>

   </div>

<div class="option-card-group mb-5 mt-5 animated fadeInUp">
      <h2 class="mb-3">Quick Stats</h2>

    <div>
      <h6 class="mt-2 mb-3">Completion</h6>
    </div>
      <div class="completion">
        <div class="statusbar-done" style="width: <%= @statusbar_done_width %>%"></div>
        <div class="statusbar-left" style="width: <%= @stausbar_not_done_witdth %>%"></div>
      </div>

      <div>



        <h6 class="mt-4 mb-3">Latest Tasks</h6>
        <% if @group_tasks.first(2).empty? %>

        <div class="group-show-task-card">
              <div class="group-task-show-icon-wrapper">
                <i class="fa-regular fa-bell" style="color:#f16db8"></i>
              </div>
              <p>Create your Task</p>
            </div>

            <% else %>
        <% @group_tasks.first(2).each do |task| %>
            <div class="group-show-task-card">
              <div class="group-task-show-icon-wrapper">
                <i class=" <%= ["fa-regular fa-bell", "fa-solid fa-bolt", "fa-regular fa-lightbulb", "fa-solid fa-explosion", "fa-solid fa-leaf"].sample %>" style="color:#f16db8"></i>
              </div>
              <p><%= task.name  %></p>
            </div>
          <% end %>

        <% end %>

        </div>







  <h6 class="mt-2 mb-3">Latest Items</h6>
        <div>
        <% if @bought_items.empty? %>
          <div class="group-show-task-card">
              <div class="group-task-show-icon-wrapper">
                <i class="fa-solid fa-cow" style="color: #c283f7"></i>
              </div>
              <p>Milk</p>
            </div>
        <% else %>
          <%  @bought_items.first(2).each do |item| %>
            <div class="group-show-task-card">
              <div class="group-task-show-icon-wrapper" style="background-color: #d6f7e5;">
                <i class="<%= ["fa-solid fa-bowl-food", "fa-solid fa-utensils", "fa-solid fa-pizza-slice", "fa-solid fa-cookie-bite", "fa-solid fa-hotdog"].sample %>" style="color:#49795f"></i>
              </div>
              <p><%= item.product.name %></p>

            </div>
          <% end %>
        <% end %>

        </div>
</div>





















</div>
